set autoindent
set backupdir=~/.cache/vim/
set cursorline
set directory=~/.cache/vim/
set ignorecase
set incsearch
set laststatus=2
set nocompatible
set relativenumber
set smartcase
set showcmd
set undofile
set undodir=~/.cache/vim/

filetype off

au BufNewFile,BufRead /tmp/mutt* set tw=72 ft=mail fo+=a|exe "normal O"|exe "normal O"|start
au BufNewFile,BufRead *.markdown,*.md set fo+=a

let g:solarized_termtrans=0
let g:solarized_style="dark"
colorscheme solarized

set rtp+=~/.vim/bundle/vundle/ 
call vundle#rc()

Bundle 'gmarik/vundle'
Bundle 'speeddating.vim'
Bundle 'utl.vim'
Bundle 'Solarized'
Bundle 'SirVer/ultisnips'
Bundle 'Lokaltog/vim-powerline'
Bundle 'scrooloose/nerdtree'
Bundle 'maksimr/vim-translator'

inoremap . .<C-g>u
inoremap ! !<C-g>u
inoremap ? ?<C-g>u
inoremap : :<C-g>u

map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

map <leader>nd :NERDTree<CR>

filetype plugin indent on

if has("syntax")
	syntax on
endif

let g:goog_user_conf = { 'langpair': 'en|ca', 'v_key': 'T' }

function! NumberToggle()
  if(&relativenumber == 1)
    set number
  else
    set relativenumber
  endif
endfunc

nnoremap <C-n> :call NumberToggle()<cr>
