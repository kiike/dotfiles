set autoindent
set backupdir=~/.cache/vim/
set cursorline
set directory=~/.cache/vim/
set ignorecase
set incsearch
set laststatus=2
set nocompatible
set relativenumber
set smartcase
set showcmd
set undofile
set undodir=~/.cache/vim/

let g:solarized_termtrans=0
let g:solarized_style="dark"
colorscheme solarized

filetype off
set rtp+=~/.vim/bundle/vundle/ 
call vundle#rc()

Bundle 'gmarik/vundle'
Bundle 'vim-pandoc/vim-pandoc'
Bundle 'speeddating.vim'
Bundle 'utl.vim'
Bundle 'Solarized'
Bundle 'SirVer/ultisnips'
Bundle 'scrooloose/nerdtree'
Bundle 'maksimr/vim-translator'

let g:pandoc_auto_format = 1

inoremap . .<C-g>u
inoremap ! !<C-g>u
inoremap ? ?<C-g>u
inoremap : :<C-g>u

map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

map <leader>nd :NERDTree<CR>

filetype plugin indent on

if has("syntax")
	syntax on
endif

let g:goog_user_conf = { 'langpair': 'en|ca', 'v_key': 'T' }

function! NumberToggle()
  if(&relativenumber == 1)
    set number
  else
    set relativenumber
  endif
endfunc

nnoremap <C-n> :call NumberToggle()<cr>

function! Prose()
	augroup PROSE
		autocmd InsertEnter * set formatoptions+=a
		autocmd InsertLeave * set formatoptions-=a
	augroup END
endfunc

function! MailInit()
	set tw=72 ft=mail
	exe "normal O"
	exe "normal O"
	call Prose()
	start
endfunc

au BufNewFile,BufRead /tmp/mutt* :call MailInit() 
au BufNewFile,BufRead *.markdown,*.md set tw=72 ts=4 sts=4 et
