auto_view text/html
alternative_order text/enriched text/plain text/html text

macro attach	  s	"<save-entry><kill-line>~/downloads/<enter>y" "Save attachment"
macro index 	  ga	"<change-folder>=archive<enter>" "Go to all mail"
macro index 	  gd	"<change-folder>=drafts<enter>" "Go to drafts"
macro index 	  gi	"<change-folder>=inbox<enter>" "Go to inbox"
macro index 	  gs	"<change-folder>=sent<enter>" "Go to Sent Mail"
macro index 	  gt	"<change-folder>=trash<enter>" "Go to Trash"
macro index 	  Y	"!offlineimap<enter>" "Sync with OfflineIMAP"
macro index,pager d	"<save-message>=trash<enter><enter><sync-mailbox>" "Trash"
macro index,pager y	"<save-message>=archive<enter><enter><sync-mailbox>" "Archive"
macro index,pager a     "|abook --add-email\n" 'add sender to abook'

bind editor <space>   noop
bind index gg first-entry
bind index G  last-entry
bind index K  sidebar-prev
bind index J  sidebar-next
bind index L  sidebar-open
bind index z  collapse-thread
bind index Z  collapse-all
bind pager k  previous-line
bind pager j  next-line
bind pager gg  top
bind pager G  bottom
bind index,pager R   list-reply


macro pager q "<exit><sync-mailbox>"
macro index,pager S ":toggle sidebar_visible<enter><redraw-screen>"

