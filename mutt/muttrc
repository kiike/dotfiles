source ~/.mutt/credentials
source ~/.mutt/aliases
source ~/.mutt/colors
source ~/.mutt/mailboxes

set   alias_file = ~/.mutt/aliases
set   beep_new
set   certificate_file = ~/.mutt/certificates
set   check_new
unset copy
set   date_format = "%d %b %Y %H:%M"
set   delete
set   editor = vim
set   fast_reply
set   folder = $HOME/mail 
set   header_cache = ~/.mutt/header_cache
set   index_format = "  %D   %-30.30F %s"
set   mail_check = 600
set   markers = no
set   mbox_type = Maildir
set   mailcap_path = ~/.mutt/mailcap
set   message_cachedir = ~/.mutt/body_cache
set   mime_forward
set   mime_forward_rest
unset move
set   pager_stop
set   postponed = "~/mail/drafts"
set   record = /tmp/sent
set   sendmail = /usr/bin/msmtp
set   sort = threads
set   sort_aux = reverse-last-date-received
set   spoolfile = "+inbox"
set   ssl_force_tls

bind editor <space> noop

macro attach	  s	"<save-entry><kill-line>/home/kiike/downloads/<enter>y" "Save attachment"
macro index 	  ga	"<change-folder>=archive<enter>" "Go to all mail"
macro index 	  gd	"<change-folder>=drafts<enter>" "Go to drafts"
macro index 	  gi	"<change-folder>=inbox<enter>" "Go to inbox"
macro index 	  gs	"<change-folder>=sent<enter>" "Go to Sent Mail"
macro index 	  gt	"<change-folder>=trash<enter>" "Go to Trash"
macro index,pager d	"<save-message>=trash<enter><enter><sync-mailbox>" "Trash"
macro index,pager y	"<save-message>=archive<enter><enter><sync-mailbox>" "Archive"


bind pager k previous-line
bind pager j next-line
bind pager gg top
bind pager G bottom
bind index gg first-entry
bind index G last-entry
