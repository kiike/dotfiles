source ~/.mutt/credentials
source ~/.mutt/aliases
source ~/.mutt/colors
source ~/.mutt/mailboxes

set   alias_file = ~/.mutt/aliases
set   certificate_file = ~/.mutt/certificates
unset copy
set   delete
set   editor = vim
set   folder = $HOME/mail 
set   header_cache = ~/.mutt/header_cache
set   mail_check = 600
set   mbox_type = Maildir
set   message_cachedir = ~/.mutt/body_cache
set   mime_forward
set   mime_forward_rest
unset move
set   pager_stop
set   postponed = "+[Gmail]/Drafts"
set   record = /tmp/sent
set   smtp_url = smtps://$imap_login:$imap_pass@smtp.gmail.com
set   spoolfile = "+INBOX"
set   ssl_force_tls

bind editor <space> noop

macro attach	  s "<save-entry><kill-line>/home/kiike/downloads/<enter>y" "Save attachment"
macro index 	  ga "<change-folder>=[Gmail].All Mail<enter>" "Go to all mail"
macro index 	  gd "<change-folder>=[Gmail].Drafts<enter>" "Go to drafts"
macro index 	  gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index 	  gs "<change-folder>=[Gmail].Sent Mail<enter>" "Go to Sent Mail"
macro index,pager d "<save-message>=[Gmail].Trash<enter><enter><sync-mailbox>" "Trash"
macro index 	  gt "<change-folder>=[Gmail].Trash<enter>" "Go to Trash"
macro index,pager y "<save-message>=[Gmail].All Mail<enter><enter><sync-mailbox>" "Archive"


