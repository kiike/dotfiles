set followlinks
set fusehome=/tmp/vifm_FUSE
set history=15
set ignorecase
set incsearch
set nofastrun
set syscalls
set noiec
set norunexec
set nosortnumbers
set notrash
set novimhelp
set timefmt=\ %m/%d\ %H:%M
set undolevels=100
set vicmd=vim
set vifminfo=bookmarks,chistory,shistory,phistory

colorscheme Default

" Move selected (visual) files
command mv mv %f %D
nnoremap ms :mv<cr>

" Move current files
nnoremap mm :mv %c %D<cr>

" Link this file into the other working dir
nnoremap ml :alink<cr>

" Try to open file with xdg-open
nnoremap oo :!xdg-open %c &>/dev/null<cr>
nnoremap os :!xdg-open %f &>/dev/null<cr>

filetype *.jpeg,*.jpg,*.png sxiv -f %c &
filetype *.wav,*.opus,*.ogg,*.mp4,*.m4v,*.mkv,*.avi,*.mov,*mp3,*aac,*m4a urxvtc -e mpv %c &
filetype *.pdf,*.ps zathura -l error %c &
filetype *.cr2,*.CR2 ufraw %c &
filetype *.smc snes9x-gtk %c &
filetype *.ppt,*.docx,*.doc,*.odt libreoffice %c &
filetype *.zip,*.rar 7z x %c &
