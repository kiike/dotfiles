set followlinks
set fusehome=/tmp/vifm_FUSE
set history=15
set ignorecase
set incsearch
set nofastrun
set noiec
set norunexec
set nosortnumbers
set notrash
set novimhelp
set timefmt=%y/%m/%d\ %H:%M
set undolevels=100
set vicmd="vim"
set vixcmd="urxvtc -e vim"
colorscheme Default

command mv mv %f %D
command mmv mv %c %D

nnoremap ms :mv<cr>
nnoremap mm :mmv<cr>

filetype *.jpeg,*.jpg,*.png sxiv -f %c &
filetype *.mp3,*.mp4,*.m4v,*.mkv,*.avi,*.mov mplayer %c &
filetype *.pdf,*.ps zathura -l error %c &
filetype *.cr2,*.CR2 ufraw %c &
filetype *.smc snes9x-gtk %c &
filetype *.docx,*.doc,*.odt libreoffice --writer %c &
filetype *.zip,*.rar 7z x %c &

set vifminfo=bookmarks,chistory,shistory,phistory
